<div class="container">
<h1>Your cocktail</h1>
<h2> <%= @cocktail.name.capitalize %> </h2>
<br>
<h3>Ingredients</h3>
<ul>
  <% @cocktail.ingredients.each do |ingredient| %>
  <li> <%= ingredient.name.capitalize %> </li>
  <% end %>
</ul>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>  <%= dose.description %> <%= link_to '☠️', dose_path(dose), method: :delete %> </li>
  <% end %>
</ul>

<%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to cocktails", "/cocktails" %>
</div>
