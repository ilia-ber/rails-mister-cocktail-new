<div class="container-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dzpgbbhmm/image/upload/v1614028882/Mr%20Cocktail/pexels-photo-2209519_h26or5.jpg);">

<div class="show-card">
  <div class="title"> <%= @cocktail.name.upcase %></div>
    <div class="picture">
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag(@cocktail.photo.key, class: "card-img-top") %>
      <% else %>
        <div >
          <img src="https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="card-img-top" alt="...">
        </div>
      </div>
    <% end %>  
  <br>
    <div class="description">
      <div class="ingredients">
        <p>Ingredients:</p>
        <ul>
          <% @cocktail.ingredients.each do |ingredient| %>
            <li> <%= ingredient.name.capitalize %> </li>
          <% end %>
        </ul>
      </div>
    </div>
</div>

    <div class="doses">
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>  <%= dose.description %> <%= link_to 'Remove', dose_path(dose), method: :delete %> </li>
        <% end %>
    </ul>
  </div>


    <div class="links">
      <%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail) %>
      <br>
      <%= link_to 'Remove cocktail', cocktail_path(@cocktail), method: :delete %>
      <br>
      <%= link_to "Back to cocktails", "/cocktails" %>
    </div>
  </div>
</div>
